<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.daniel.hnd2.activities.TipActivity"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <TextView android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"/>

    <TextView android:id="@+id/txtDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton android:id="@+id/btn_twitter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_twitter" />

        <ImageButton android:id="@+id/btn_facebook"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_facebook" />

        <ImageButton android:id="@+id/btn_whatsapp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_whatsapp" />

        <ImageButton android:id="@+id/btn_compartir"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_share" />

    </LinearLayout>

</LinearLayout>
